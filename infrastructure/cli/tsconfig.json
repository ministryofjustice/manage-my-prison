{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"], // DOM is needed to for types within AWS packages
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "experimentalDecorators": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "files": false,
    "emit": false,
  },
  "exclude": ["dist"],
}
