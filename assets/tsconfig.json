{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "module": "commonjs",
    "outDir": "./js/",
    "sourceMap": false,
    "allowJs": false,
    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules",
    "js",
    "build.ts",
  ],
  "include": ["**/*.ts"]
}
