{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "assets",
    "dist",
    "infrastructure",
    "integration_tests",
  ],
  "include": ["**/*.js", "**/*.ts"]
}
