{
  "name": "manage-my-prison",
  "version": "0.0.1",
  "private": true,
  "description": "Manage My Prison",
  "repository": "git@github.com:ministryofjustice/manage-my-prison.git",
  "license": "MIT",
  "homepage": "https://github.com/ministryofjustice/manage-my-prison",
  "author": {
    "name": "HMPPS Digital (MoJ Digital & Technology)",
    "email": "info@digital.justice.gov.uk",
    "url": "https://mojdigital.blog.gov.uk/"
  },
  "scripts": {
    "prepare": "husky install",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend ./assets/sass/application.scss:./assets/stylesheets/application.css --style compressed",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "record-build-info": "node ./bin/record-build-info",
    "setup-athena-tables": "node ./dist/bin/setup-athena-tables.js",
    "lint": "eslint . --cache --max-warnings 0",
    "npm-check-updates": "npx npm-check-updates --doctor --upgrade",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest --detectOpenHandles",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "generate-random-data": "node ./dist/bin/generate-random-data.js",
    "clean": "rm -rf node_modules assets/stylesheets dist"
  },
  "engines": {
    "node": "^16.13",
    "npm": "^8.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-athena": "^3.38.0",
    "@aws-sdk/client-s3": "^3.38.0",
    "@ministryofjustice/frontend": "^1.0.0",
    "@sentry/node": "^6.13.3",
    "agentkeepalive": "^4.1.4",
    "applicationinsights": "^2.1.8",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^6.0.0",
    "cookie-session": "^1.4.0",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.2",
    "faker": "^5.5.3",
    "govuk-frontend": "^3.14.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "jquery": "^3.6.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "nocache": "^3.0.1",
    "nunjucks": "^3.2.3",
    "passport": "^0.5.0",
    "passport-oauth2": "^1.6.1",
    "redis": "^3.1.2",
    "superagent": "^6.1.0",
    "vega": "^5.21.0",
    "vega-embed": "^6.20.0",
    "vega-lite": "^5.1.1",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.7",
    "@types/bunyan-format": "^0.2.4",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/connect-redis": "^0.0.17",
    "@types/cookie-session": "^2.0.43",
    "@types/csurf": "^1.11.2",
    "@types/express-request-id": "^1.4.3",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^5.5.9",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.6",
    "@types/nunjucks": "^3.2.0",
    "@types/passport": "^1.0.7",
    "@types/passport-oauth2": "^1.4.11",
    "@types/redis": "^2.8.32",
    "@types/superagent": "^4.1.13",
    "@types/supertest": "^2.0.11",
    "@types/yargs": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "concurrently": "^6.3.0",
    "cypress": "^8.7.0",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-html-reporter": "^3.4.1",
    "jest-junit": "^13.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^11.2.6",
    "mocha-junit-reporter": "^2.0.2",
    "nock": "^13.1.4",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
